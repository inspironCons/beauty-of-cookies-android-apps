<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.submision.myfavcookieseid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Submision_dicoding_pertama">
        <activity
            android:name="com.submision.myfavcookieseid.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.Submision_dicoding_pertama.NoActionBar"/>
        <activity
            android:name="com.submision.myfavcookieseid.ProfileActivity"
            android:label="@string/profil_activity"
            android:theme="@style/Theme.Submision_dicoding_pertama.NoActionBar"/>
        <activity android:name="com.submision.myfavcookieseid.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.submision.myfavcookieseid.MainActivity"/>
    </application>

</manifest>